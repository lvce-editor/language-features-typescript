{
  "compilerOptions": {
    "lib": ["esnext"],
    "checkJs": true,
    "module": "NodeNext",
    "target": "esnext",
    "types": ["node", "jest"],
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "strict": true,
    "strictNullChecks": false
  },
  "include": ["src", "test"]
}

{
  "name": "builtin.language-features-typescript-monorepo",
  "version": "0.0.0-dev",
  "description": "TypeScript language features monorepo for LVCE Editor",
  "license": "MIT",
  "author": "LVCE Editor",
  "type": "module",
  "scripts": {
    "build": "node scripts/build.js",
    "build:static": "node scripts/build-static.js",
    "build:watch": "node packages/build/src/build-watch.ts",
    "dev": "node packages/build/src/dev.ts",
    "e2e": "cd packages/e2e && npm run e2e",
    "e2e:headless": "cd packages/e2e && npm run e2e:headless",
    "format": "prettier --write .",
    "postinstall": "lerna bootstrap --ci && node scripts/postinstall.js",
    "lint": "eslint . && prettier --check .",
    "test": "lerna run test",
    "type-check": "tsc -b"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "dependencies": {
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@lerna/legacy-package-management": "^8.2.4",
    "@lvce-editor/eslint-config": "^1.64.0",
    "eslint": "^9.36.0",
    "jest": "^30.1.3",
    "lerna": "^8.2.4",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.4"
  }
}
